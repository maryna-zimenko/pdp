  <script>
    const mantras = [
      "‚ÄúWorks on my machine‚Äù is not a test plan.",
      "If it passes once, it‚Äôs flaky. If it fails once, it‚Äôs ‚Äòcannot reproduce‚Äô.",
      "Hope is not a release strategy.",
      "QA: turning ‚Äòit‚Äôs fine‚Äô into ‚Äòit‚Äôs documented‚Äô.",
      "If you didn‚Äôt log it, it didn‚Äôt happen. (Except the outage. That happened.)"
    ];

    const jokes = [
      "Why did the QA cross the road? To reproduce the bug on the other environment.",
      "I told the dev the bug was intermittent. They said: ‚ÄòSo is my attention.‚Äô",
      "My favorite feature is the loading spinner‚Äîit‚Äôs always responsive.",
      "QA walks into a bar, orders 1 beer, 0 beers, -1 beers, 999999 beers‚Ä¶ and the bar catches fire.",
      "I don‚Äôt always file bugs, but when I do, it‚Äôs ‚ÄòSeverity: Emotional‚Äô."
    ];

    const steps = [
      "Open the app",
      "Click the shiny button",
      "Do the thing you ‚Äòdefinitely can‚Äôt do‚Äô",
      "Observe unexpected enlightenment",
      "Sigh professionally"
    ];

    const environments = ["Staging", "Prod (oops)", "Local", "UAT", "The one nobody remembers"];
    const severities = ["Low", "Medium", "High", "Critical", "Cosmic"];
    const browsers = ["Chrome", "Firefox", "Safari", "Edge", "Internet Explorer (why?)"];
    const moods = ["confused", "concerned", "deeply unimpressed", "mildly haunted", "surprisingly calm"];

    const output = document.getElementById("output");
    const terminal = document.getElementById("terminal");
    const bugBlock = document.getElementById("bugBlock");
    const stamp = document.getElementById("stamp");
    const mantraEl = document.getElementById("mantra");

    const nowStamp = () => {
      const d = new Date();
      return d.toLocaleString(undefined, { hour: "2-digit", minute: "2-digit" });
    };

    function log(line, dim=false){
      const div = document.createElement("div");
      div.textContent = line;
      if(dim) div.style.opacity = "0.65";
      terminal.appendChild(div);
      terminal.scrollTop = terminal.scrollHeight;
    }

    function rand(arr){ return arr[Math.floor(Math.random() * arr.length)]; }

    function setMantra(){
      mantraEl.textContent = rand(mantras);
    }
    setMantra();

    document.getElementById("btn-joke").addEventListener("click", () => {
      const j = rand(jokes);
      output.textContent = j;
      log("qa@lab:~$ generate --joke", true);
      log("‚úÖ " + j);
      stamp.textContent = "‚Äî joked at " + nowStamp();
      setMantra();
    });

    document.getElementById("btn-pass").addEventListener("click", () => {
      output.textContent = "Running tests‚Ä¶ (the real test is your patience).";
      log("qa@lab:~$ npm test", true);

      const results = [
        "PASS  ui.spec.js  (1 test, 1 passed)",
        "PASS  api.spec.js (3 tests, 3 passed)",
        "WARN  flaky.spec.js (passes when observed)",
        "NOTE  coffee.spec.js (requires caffeine >= 1)"
      ];

      results.forEach(r => log(r));
      log("‚ú® Summary: 4 files, 1 warning, 0 confidence.");
      stamp.textContent = "‚Äî tested at " + nowStamp();
    });

    document.getElementById("btn-bug").addEventListener("click", () => {
      const env = rand(environments);
      const sev = rand(severities);
      const br = rand(browsers);
      const mood = rand(moods);

      const stepCount = 3 + Math.floor(Math.random() * 3);
      const chosenSteps = Array.from({length: stepCount}, (_, i) => `${i+1}. ${rand(steps)}`);

      const title = `Button does the opposite of what it promises (and feels ${mood})`;
      const expected = "Expected: Button performs the advertised action and everyone applauds politely.";
      const actual = "Actual: Button triggers an alternate timeline where the UI shrugs and logs nothing.";

      const report =
`Title: ${title}
Environment: ${env}
Browser: ${br}
Severity: ${sev}

Steps to Reproduce:
${chosenSteps.join("\n")}

Expected Result:
${expected}

Actual Result:
${actual}

Notes:
- Repro rate: 60% (100% when demoing to stakeholders)
- Attachments: screenshot.png (contains a spinner contemplating existence)
`;

      bugBlock.textContent = report;
      output.textContent = "Bug report spawned. Please file it under ‚ÄòIt‚Äôs Funny Until It‚Äôs Prod‚Äô.";
      log("qa@lab:~$ report --spawn", true);
      log("üêõ Bug report generated (" + sev + ") in " + env + ".");
      stamp.textContent = "‚Äî reported at " + nowStamp();
    });

    document.getElementById("btn-reset").addEventListener("click", () => {
      output.textContent = "Reset complete. The bug is still here, but the vibes improved.";
      terminal.innerHTML = '<div class="dim">qa@lab:~$ waiting for user input‚Ä¶</div>';
      bugBlock.innerHTML = '<span class="dim">No bug report yet</span>';
      stamp.textContent = "‚Äî";
      setMantra();
    });
  </script>
